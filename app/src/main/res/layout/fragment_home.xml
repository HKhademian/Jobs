<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      app:cardCornerRadius="6dp">
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:src="@drawable/ic_social_brand"
        android:adjustViewBounds="true"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      app:cardCornerRadius="6dp"
      app:cardBackgroundColor="@color/colorPrimaryDark">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorIcons"
        android:text="Please use bottom Navigation items or Navigation Bar items to use this app"/>
    </android.support.v7.widget.CardView>

    <ir.chista.jobs.view.UserView
      android:id="@+id/userView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      app:cardCornerRadius="6dp"/>

    <ir.chista.jobs.view.FieldBox
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      app:cardCornerRadius="6dp"
      android:text="Nature"
      app:action1="Dismiss"
      app:action2="Apply">
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_login"
        android:adjustViewBounds="true"/>
    </ir.chista.jobs.view.FieldBox>

    <ir.chista.jobs.view.FieldBox
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      app:cardCornerRadius="6dp"
      android:text="This is a fake item">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryText"
        android:text="This is a very useful card"/>
    </ir.chista.jobs.view.FieldBox>

    <ir.chista.jobs.view.FieldBox
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      app:cardCornerRadius="6dp"
      android:text="A very important banner"
      app:action1="Dismiss"
      app:action2="Apply">
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_social_brand"
        android:adjustViewBounds="true"/>
    </ir.chista.jobs.view.FieldBox>

    <ir.chista.jobs.view.FieldBox
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      app:cardCornerRadius="6dp"
      android:text="This is another fake item">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryText"
        android:text="This is a very useful card"/>
    </ir.chista.jobs.view.FieldBox>

    <ir.chista.jobs.view.FieldBox
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      app:cardCornerRadius="6dp"
      android:text="Nature"
      app:action1="Dismiss"
      app:action2="Apply"
      android:padding="0dp">
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_register"
        android:adjustViewBounds="true"/>
    </ir.chista.jobs.view.FieldBox>

  </LinearLayout>
</android.support.v4.widget.NestedScrollView>
