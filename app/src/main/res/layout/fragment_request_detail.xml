<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/back"
  tools:context=".screen.request.detail.RequestDetailActivity">

  <LinearLayout
    android:id="@+id/actionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:elevation="32dp"
    android:padding="4dp">
    <Button
      android:id="@+id/cancelAction"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:textColor="@color/colorIcons"
      android:text="@string/action_cancel"/>
    <Button
      android:id="@+id/editAction"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="@style/Widget.AppCompat.Button.Colored"
      android:text="@string/action_edit"/>
  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/actionBar"
    android:overScrollMode="never"
    android:orientation="vertical"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:orientation="vertical">
      <ir.hossainkhademian.jobs.view.FieldBox
        android:id="@+id/typeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/field_request_type">
        <include
          android:id="@+id/typeView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          layout="@layout/view_request_type"/>
      </ir.hossainkhademian.jobs.view.FieldBox>

      <ir.hossainkhademian.jobs.view.FieldBox
        android:id="@+id/jobCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="@string/field_request_job">
        <ir.hossainkhademian.jobs.view.JobView
          android:id="@+id/jobView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="2dp"
          style="@style/CardView.Light.Hidden"
          app:small="true"/>
      </ir.hossainkhademian.jobs.view.FieldBox>

      <ir.hossainkhademian.jobs.view.FieldBox
        android:id="@+id/skillsCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="@string/field_request_skills">
        <me.gujun.android.taggroup.TagGroup
          android:id="@+id/skillsView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="4dp"
          style="@style/TagGroup.Large"/>
      </ir.hossainkhademian.jobs.view.FieldBox>

      <ir.hossainkhademian.jobs.view.FieldBox
        android:id="@+id/userCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="@string/field_request_user">
        <ir.hossainkhademian.jobs.view.UserView
          android:id="@+id/userView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="2dp"
          style="@style/CardView.Light.Hidden"/>
      </ir.hossainkhademian.jobs.view.FieldBox>

      <ir.hossainkhademian.jobs.view.FieldBox
        android:id="@+id/detailCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="@string/field_request_detail">
        <TextView
          android:id="@+id/detailView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="4dp"
          android:minLines="5"
          android:maxLines="35"
          android:lines="5"
          android:scrollbars="vertical"/>
      </ir.hossainkhademian.jobs.view.FieldBox>

      <ir.hossainkhademian.jobs.view.FieldBox
        android:id="@+id/stateCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="@string/field_request_state">
        <TextView
          android:id="@+id/stateView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="4dp"/>
      </ir.hossainkhademian.jobs.view.FieldBox>

      <ir.hossainkhademian.jobs.view.FieldBox
        android:id="@+id/brokersCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="@string/field_request_brokers">
        <android.support.v7.widget.RecyclerView
          android:id="@+id/brokersView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="4dp"
          android:scrollbars="none"
          android:overScrollMode="never"/>
      </ir.hossainkhademian.jobs.view.FieldBox>

      <ir.hossainkhademian.jobs.view.FieldBox
        android:id="@+id/matchesCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="@string/field_request_matches">
        <android.support.v7.widget.RecyclerView
          android:id="@+id/matchesView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="4dp"
          android:scrollbars="none"
          android:overScrollMode="never"/>
      </ir.hossainkhademian.jobs.view.FieldBox>
    </LinearLayout>
  </ScrollView>
</android.support.constraint.ConstraintLayout>
