<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:context=".screen.chat.detail.ChatDetailActivity">

  <FrameLayout
    android:id="@+id/chat_box"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/blank"
    app:layout_constraintHorizontal_weight="75">

    <android.support.v7.widget.CardView
      android:id="@+id/chat_card"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="4dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="16dp"
      app:cardBackgroundColor="@color/color_message_card_receive"
      app:cardCornerRadius="16dp"
      app:cardElevation="2dp">

      <TextView
        android:id="@+id/messageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="32dp"
        android:minWidth="64dp"
        android:autoLink="all"
        android:padding="8dp"
        tools:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textIsSelectable="true"/>
    </android.support.v7.widget.CardView>

    <TextView
      android:id="@+id/emojiView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="❤"
      android:textColor="#000"
      android:textSize="64sp"/>

  </FrameLayout>

  <TextView
    android:id="@+id/timeView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="@id/chat_box"
    app:layout_constraintTop_toBottomOf="@id/chat_box"
    tools:text="@string/app_name"
    android:textAppearance="@style/TextAppearance.AppCompat.Small"
    android:textSize="12sp"
    android:textIsSelectable="true"
    android:layout_marginLeft="12dp"
    android:layout_marginStart="12dp"/>

  <View
    android:id="@+id/blank"
    app:layout_constraintHorizontal_weight="25"
    app:layout_constraintStart_toEndOf="@id/chat_box"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/chat_box"
    app:layout_constraintBottom_toBottomOf="@id/chat_box"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>
